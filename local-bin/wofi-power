#!/usr/bin/env bash

choice=$(printf "‚èª Shutdown\n‚Üª Reboot\nüóù Lock\n‚éã Logout" | \
wofi --dmenu \
     --prompt "Power Options" \
     --location top_left \
     --width 300 \
     --height 275)

case "$choice" in
  *Shutdown) systemctl poweroff ;;
  *Reboot)   systemctl reboot ;;
  *Lock)     hyprlock ;;
  *Logout)   hyprctl dispatch exit ;;
esac
